#include <stdio.h>
#include <stdlib.h>

struct node
{
    int data;
    struct node *next;
    struct node *pre;
};
struct node *head=NULL;

void insert()
{
    int n;
    struct node *ptr=(struct node *)malloc(sizeof(struct node));
    if(ptr==NULL)
        printf("Overflow \n");
    else
    {
        printf("Enter Data into Double Linked List \n");
        scanf("%d",&n);
        ptr->data=n;
        if(head==NULL)
        {
            head=ptr;
            head->next=NULL;
            head->pre=NULL;
        }
        else
        {
            ptr->next=head;
            head->pre=ptr;
            ptr->pre=NULL;
            head=ptr;
        }
    }
}

void deleted()
{
    int d,f=0;
    struct node *temp=head;
    if(head==NULL)
    {
        printf("Its empty \n");
        return;
    }
    printf("Enter value to be deleted\n");
    scanf("%d",&d);
    while(temp!=NULL)
    {
       if(temp->data==d)
            {
                f=1;
                break;
            }
       else
        temp=temp->next;
    }
    if(f==0)
        printf("Data %d not found \n\n",d);
    else
    {
        if(temp==head)
        {
            head=temp->next;
            temp->pre=NULL;
        }
        else if(temp->next==NULL)
        {
            temp->pre->next=NULL;
        }
        else
        {
            temp->next->pre=temp->pre;
            temp->pre->next=temp->next;
        }
        printf("%d is deleted from List \n\n",d);
        free(temp);
    }
}

void display()
{
    struct node *temp;
    if(head==NULL)
    {
        printf("List is empty \n\n");
        return;
    }
    printf("\n");
    temp=head;
    while(temp!=NULL)
    {
        printf("%d ",temp->data);
        temp=temp->next;
    }
    printf("\n");
}
void insertl()
{
    struct node *temp=head,*ptr;
    int e,da,f=0;
    printf("Enter element \n\n");
    scanf("%d",&e);
    while(temp!=NULL)
    {
        if(temp->data==e)
        {
            f=1;
            break;
        }
        temp=temp->next;
    }
    if(f==0)
        printf("Element %d not found \n\n",e);
    else{
        printf("Enter value to insert \n\n");
        scanf("%d",&da);
        ptr=(struct node *)malloc(sizeof(struct node));
        temp->pre->next=ptr;
        ptr->pre=temp->pre;
        ptr->next=temp;
        temp->pre=ptr;
    }
}

int main()
{
    int ch;
    printf("Enter your choice \n");
    while(1)
    {
        printf("\n1.To insert node \n2.To delete data \n3.To display data of Linked List \n4.Insert to left \n5.Exit \n\n");
        scanf("%d",&ch);
        switch(ch)
        {
            case 1: insert();
            break;
            case 2: deleted();
            break;
            case 3: display();
            break;
            case 4: insertl();
            break;
            case 5: exit(0);
            default: printf("Enter valid number \n");
        }
    }
    return 0;
}
